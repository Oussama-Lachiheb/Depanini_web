{% extends 'back.html.twig' %}
{% block body %}
<form method="post" action="{{ path('app_promotion_delete', {'idPromo': promotion.idPromo}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.idPromo) }}">
    <button class="btn">Delete</button>
</form>
{% endblock %}

